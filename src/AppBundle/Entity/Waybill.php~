<?php

namespace AppBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

use Symfony\Component\Validator\Constraints as Assert;

use Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity;

use Doctrine\Common\Collections\ArrayCollection;

/**
 * @ORM\Entity
 * @ORM\Table(name="waybills")
 * @UniqueEntity(
 * 		fields={"waybill_no"},
 *		message="This AR. No. already exists."
 * )
 */
class Waybill
{
	/**
	 *
     * @ORM\Id
     * @ORM\Column(name="waybill_id", type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $waybill_id;
	
	/**
     * @ORM\Column(name="waybill_no", type="string", length=12, unique=true)
     * @Assert\NotBlank()
     * @Assert\Length(
     *      min = 6,
     *      max = 12,
     *      minMessage = "AR. No. must be at least {{ limit }} characters long",
     *      maxMessage = "AR. No. cannot be longer than {{ limit }} characters"
     * )
     */
    private $waybill_no;
	
	/**
     * @ORM\ManyToOne(targetEntity="Customer")
     * @ORM\JoinColumn(name="shipper_id", referencedColumnName="customer_id")
     */
    private $shipper;
	
	/**
     * @ORM\ManyToOne(targetEntity="Customer")
     * @ORM\JoinColumn(name="consignee_id", referencedColumnName="customer_id")
     */
    private $consignee;
	
	/**
     * @ORM\Column(name="destination", type="string", length=3)
     */
    private $destination;

    /**
     * @ORM\Column(name="total_amount", type="decimal", precision=11, scale=2)
     */
    private $total_amount = 0;

    /**
     * @ORM\Column(name="total_weight_charge", type="decimal", precision=11, scale=2)
     */
    private $total_weight_charge = 0;

    /**
     * @ORM\Column(name="total_value_charge", type="decimal", precision=11, scale=2)
     */
    private $total_value_charge = 0;

    /**
     * @ORM\Column(name="total_cu_msmt_charge", type="decimal", precision=11, scale=2)
     */
    private $total_cu_msmt_charge = 0;

    /**
     * @ORM\Column(name="total_delivery_charge", type="decimal", precision=11, scale=2)
     */
    private $total_delivery_charge = 0;

    /**
     * @ORM\Column(name="total_vat", type="decimal", precision=11, scale=2)
     */
    private $total_vat = 0;

    /**
     * @ORM\Column(name="notes", type="text", nullable=true)
     */
    private $notes;

	/**
     * @ORM\OneToMany(targetEntity="Cargo", mappedBy="waybill")
     */
    private $cargo;

	/**
	*	Waybill Constructor
	*
	*/
    public function __construct()
    {
        $this->cargo = new ArrayCollection();
    }

    /**
     * Get waybillId
     *
     * @return integer
     */
    public function getWaybillId()
    {
        return $this->waybill_id;
    }

    /**
     * Set destination
     *
     * @param string $destination
     *
     * @return Waybill
     */
    public function setDestination($destination)
    {
        $this->destination = $destination;

        return $this;
    }

    /**
     * Get destination
     *
     * @return string
     */
    public function getDestination()
    {
        return $this->destination;
    }

    /**
     * Set totalAmount
     *
     * @param string $totalAmount
     *
     * @return Waybill
     */
    public function setTotalAmount($totalAmount)
    {
        $this->total_amount = $totalAmount;

        return $this;
    }

    /**
     * Get totalAmount
     *
     * @return string
     */
    public function getTotalAmount()
    {
        return $this->total_amount;
    }

    /**
     * Set notes
     *
     * @param string $notes
     *
     * @return Waybill
     */
    public function setNotes($notes)
    {
        $this->notes = $notes;

        return $this;
    }

    /**
     * Get notes
     *
     * @return string
     */
    public function getNotes()
    {
        return $this->notes;
    }

    /**
     * Add cargo
     *
     * @param \AppBundle\Entity\Cargo $cargo
     *
     * @return Waybill
     */
    public function addCargo(\AppBundle\Entity\Cargo $cargo)
    {
        $this->cargo[] = $cargo;

        return $this;
    }

    /**
     * Remove cargo
     *
     * @param \AppBundle\Entity\Cargo $cargo
     */
    public function removeCargo(\AppBundle\Entity\Cargo $cargo)
    {
        $this->cargo->removeElement($cargo);
    }

    /**
     * Get cargo
     *
     * @return \Doctrine\Common\Collections\Collection
     */
    public function getCargo()
    {
        return $this->cargo;
    }

    /**
     * Set shipper
     *
     * @param \AppBundle\Entity\Customer $shipper
     *
     * @return Waybill
     */
    public function setShipper(\AppBundle\Entity\Customer $shipper = null)
    {
        $this->shipper = $shipper;

        return $this;
    }

    /**
     * Get shipper
     *
     * @return \AppBundle\Entity\Customer
     */
    public function getShipper()
    {
        return $this->shipper;
    }

    /**
     * Set consignee
     *
     * @param \AppBundle\Entity\Customer $consignee
     *
     * @return Waybill
     */
    public function setConsignee(\AppBundle\Entity\Customer $consignee = null)
    {
        $this->consignee = $consignee;

        return $this;
    }

    /**
     * Get consignee
     *
     * @return \AppBundle\Entity\Customer
     */
    public function getConsignee()
    {
        return $this->consignee;
    }

    /**
     * Set waybillNo
     *
     * @param string $waybillNo
     *
     * @return Waybill
     */
    public function setWaybillNo($waybillNo)
    {
        $this->waybill_no = $waybillNo;

        return $this;
    }

    /**
     * Get waybillNo
     *
     * @return string
     */
    public function getWaybillNo()
    {
        return $this->waybill_no;
    }
}
